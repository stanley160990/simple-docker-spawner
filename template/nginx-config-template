server {
    listen 80;
    server_name hpc-a100-mf.gunadarma.ac.id;

    return 301 https://$host$request_uri;
}

server {
        listen 443 ssl;
        server_name hpc-a100-mf.gunadarma.ac.id;

        ssl_certificate /etc/letsencrypt/live/hpc-a100-mf.gunadarma.ac.id/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/hpc-a100-mf.gunadarma.ac.id/privkey.pem;
        # include /etc/letsencrypt/options-ssl-nginx.conf;
        # ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

        location /GEN_PATH/ {
            proxy_pass DOCKER_URL;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
        location /GEN_PATH/websocket/ {
            proxy_pass DOCKER_URLwebsocket/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "Upgrade";
            proxy_set_header Host $host;
            proxy_cache_bypass $http_upgrade;
        }
}
